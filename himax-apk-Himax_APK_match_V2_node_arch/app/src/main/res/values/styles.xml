    <style name="popup_window_setting_content">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFBCBCBC</item>
    </style>
    <style name="popup_window_setting_content_radiobutton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFBCBCBC</item>
    </style>


    <style name="HimaxFullScreenTheme" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:navigationBarColor">@color/himax_blue_alpha</item>
        <item name="android:statusBarColor">@color/himax_blue_alpha</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:colorAccent">@color/himax_blue</item>
        <item name="android:colorPrimary">@android:color/background_light</item>
        <item name="android:colorForeground">@color/himax_blue</item>
    </style>

    <style name="HimaxActionBar" parent="android:Theme.Material.Light" >
        <!--<item name="android:background">@color/himax_light_gray</item>-->
        <item name="android:navigationBarColor">@color/himax_blue_alpha</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:colorAccent">@color/himax_blue</item>
        <item name="android:colorPrimary">@android:color/background_light</item>
        <item name="android:colorForeground">@color/himax_blue</item>
        <item name="android:actionBarSize">@dimen/action_bar_height</item>

        <item name="android:actionBarStyle">@style/HimaxActionBar.ActionBar</item>
    </style>

    <style name="HimaxActionBar.ActionBar" parent="android:Widget.Material.Light.ActionBar">
        <item name="android:background">@drawable/himax_bar_divider</item>
        <item name="android:titleTextStyle">@style/HimaxActionBar.ActionTitleStyle</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">40dp</item>
    </style>

    <style name="HimaxActionBar.ActionTitleStyle" parent="android:TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#707070</item>

    </style>


    <style name="PresetLayoutButton">
        <item name="android:background">@drawable/background_selector_preset_button</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PresetLayoutButton_ValueText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_time_preset_unit</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingEnd"> @dimen/padding_side_title_text </item>
        <item name="android:paddingLeft">@dimen/padding_side_title_text</item>
        <item name="android:paddingStart"> @dimen/padding_side_title_text </item>
        <item name="android:paddingRight">@dimen/padding_side_title_text</item>
    </style>


    <style name="PresetLayoutButton_UnitText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_time_preset_unit</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">0dp</item>
    </style>

</resources>
