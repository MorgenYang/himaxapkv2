<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:layout_weight="1">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tl"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >
            <TextView
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Frames:"
                android:textSize="16dp" />
            <EditText
                android:width="0dp"
                android:id="@+id/Edit_frames"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:phoneNumber="true"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >
            <TextView
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Base Hopping freq:"
                android:textSize="16dp" />
            <EditText
                android:width="0dp"
                android:id="@+id/Text_basehopping"
                android:layout_height="wrap_content"
                android:text="555"
                android:layout_weight="1"
                android:phoneNumber="true"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >
            <TextView
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Target Hopping freq:"
                android:textSize="16dp" />
            <EditText
                android:width="0dp"
                android:id="@+id/Text_lasthopping"
                android:layout_height="wrap_content"
                android:text="180"
                android:layout_weight="1"
                android:phoneNumber="true"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >
            <TextView
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Hopping Scale:"
                android:textSize="16dp" />
            <EditText
                android:width="0dp"
                android:id="@+id/Text_hoppingscale"
                android:layout_height="wrap_content"
                android:text="15"
                android:layout_weight="1"
                android:phoneNumber="true"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >
            <TextView
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Frequency Number:"
                android:textSize="16dp" />
            <TextView
                android:width="0dp"
                android:id="@+id/Text_freqNumber"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:phoneNumber="true"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >
            <TextView
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Frequency(kHZ)"
                android:textSize="16dp" />
            <TextView
                android:width="0dp"
                android:id="@+id/Text_freq"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:phoneNumber="true"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >
            <TextView
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Current Frame:"
                android:textSize="16dp" />
            <TextView
                android:width="0dp"
                android:id="@+id/Text_currentFrame"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:phoneNumber="true"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >
            <TextView
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Current Frequency(kHZ):"
                android:textSize="16dp" />
            <TextView
                android:width="0dp"
                android:id="@+id/Text_currentFreq"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:phoneNumber="true"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            >
            <TextView
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="File Storage:"
                android:textSize="16dp" />
            <TextView
                android:width="0dp"
                android:id="@+id/Text_fileStorage"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:phoneNumber="true"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >
            <TextView
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status:"
                android:textSize="16dp" />
            <TextView
                android:width="0dp"
                android:id="@+id/Text_status"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:phoneNumber="true"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >
            <Button
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start"
                android:textSize="16dp"
                android:id="@+id/Btn_start"/>
            <Button
                android:width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Back"
                android:textSize="16dp"
                android:id="@+id/Btn_back" />
        </TableRow>
        <!--<TableRow-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/RowGraphic" >-->

        <!--</TableRow>-->
        <!--<himax.touch.rawdatarecord.LineGraphicView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/LineGraphic">-->
        <!--</himax.touch.rawdatarecord.LineGraphicView>-->
    </TableLayout>
</LinearLayout>
</ScrollView>