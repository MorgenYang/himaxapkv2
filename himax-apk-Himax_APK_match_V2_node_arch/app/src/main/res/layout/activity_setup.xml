<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="0dp"
    tools:context=".SetupActivity" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp">


    <LinearLayout
        android:id="@+id/setup_linear_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:padding="5dp"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/setup_textview00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Version :" />
        <Spinner
            android:id="@+id/setup_driver_arch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>
        <TextView
            android:id="@+id/setup_textview0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Node Directory :"

            />

        <EditText
            android:id="@+id/setup_dir_text"
            style="@style/btnStylelemon_chiffon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:id="@+id/setup_diag_lay"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/setup_diag_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/setup_textview1"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:clickable="false"

            android:text="Diag Node :" />

        <EditText
            android:id="@+id/setup_diag_text"
            style="@style/btnStylelemon_chiffon"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"

            android:ems="10"
            >

            <requestFocus />
        </EditText>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/setup_register_lay"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/setup_reg_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/setup_textview2"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Register Node :" />

        <EditText
            android:id="@+id/setup_register_text"
            style="@style/btnStylelemon_chiffon"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:ems="10"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/setup_debuglevel_lay"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/setup_dbglv_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/setup_textview3"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Debug level Node :" />

        <EditText
            android:id="@+id/setup_debuglevel_text"
            style="@style/btnStylelemon_chiffon"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:ems="10"
            />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/setup_flashdump_lay"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/setup_flashdump_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/setup_textview4"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Flash Dump Node :" />

        <EditText
            android:id="@+id/setup_flashdump_text"
            style="@style/btnStylelemon_chiffon"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:ems="10"
           />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/setup_selftest_lay"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/setup_slftest_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/setup_textview5"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Self Test Node :" />

        <EditText
            android:id="@+id/setup_selftest_text"
            style="@style/btnStylelemon_chiffon"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:ems="10"
            android:editable="false"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/setup_reset_lay"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/setup_reset_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/setup_textview6"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Reset Node :" />

        <EditText
            android:id="@+id/setup_reset_text"
            style="@style/btnStylelemon_chiffon"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:ems="10"
            />
     </LinearLayout>
    <LinearLayout
        android:id="@+id/setup_debug_lay"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/setup_debug_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/setup_textview7"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Debug Node :" />

        <EditText
            android:id="@+id/setup_debug_text"
            style="@style/btnStylelemon_chiffon"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:ems="10" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/setup_vendor_lay"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/setup_vendor_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/setup_textview8"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Vendor Node :" />

        <EditText
            android:id="@+id/setup_vendor_text"
            style="@style/btnStylelemon_chiffon"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:ems="10"
           />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/setup_sense_lay"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/setup_sns_chk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/setup_textview10"
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:text="SenseOnOff :" />

            <EditText
                android:id="@+id/setup_sense_text"
                style="@style/btnStylelemon_chiffon"
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:ems="10"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#77DDFF">
            <TextView
                android:id="@+id/setup_textview9"
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:text="Klog Tag :" />

            <EditText
                android:id="@+id/kernel_log_tag_text"
                style="@style/btnStylelemon_chiffon_hint_blue"
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:ems="10"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#77DDFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:text="Save Dir :" />

            <EditText
                android:id="@+id/setup_save_dir_path"
                style="@style/btnStylelemon_chiffon_hint_blue"
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:ems="10"
                />
        </LinearLayout>

        <Button
            android:id="@+id/setup_save_BTN"
            style="@style/btnStyleopal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="SAVE" />
    </LinearLayout>
    </RelativeLayout>

</ScrollView>
